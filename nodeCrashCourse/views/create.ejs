<%- include('./partials/header') %>

<div class="container create content">
    <h1>New Blogs</h1>


    <form action="/blogs" method="POST">

        <div class="col-lg-6">
            <div class="form-group">
                <label for="blogName">Blog Name</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="your blogs">
            </div>
            <div class="form-group">
                <label for="snippets">Snippets</label>
                <input type="text" class="form-control" id="snippets" name="snippet" placeholder="your snippets">
            </div>
            <div class="form-group">
                <label for="blogBody">Blog Body</label>
                <textarea class="form-control" id="body" name="body" rows="3"></textarea>
            </div>
            <button class="btn btn-primary">Submit</button>

        </div>
    </form>

</div>

<%- include('./partials/footer') %>