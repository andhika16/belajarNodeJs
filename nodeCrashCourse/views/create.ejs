<%- include('partials/header') %>

<div class="container create content">
    <h1>New Blogs</h1>


    <form action="">

        <div class="col-lg-6">
            <div class="form-group">
                <label for="blogName">Blog Name</label>
                <input type="text" class="form-control" id="blogName" placeholder="your blogs">
            </div>
            <div class="form-group">
                <label for="snippets">Snippets</label>
                <input type="text" class="form-control" id="snippets" placeholder="your snippets">
            </div>
            <div class="form-group">
                <label for="blogBody">Blog Body</label>
                <textarea class="form-control" id="blogBody" rows="3"></textarea>
            </div>
            <button class="btn btn-primary">Submit</button>

        </div>
    </form>

</div>

<%- include('partials/footer') %>