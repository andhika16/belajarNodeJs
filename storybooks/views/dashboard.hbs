<h6>Dashboard</h6>
<h1>Welcome {{name}}</h1>
<p>here your stories</p>

<div class="section"></div>

{{#if stories}}

<table class="stripped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a href="/stories/{{_id}}">{{title}}</a></td>
            <td>{{createdAt}}</td>
            <td><span class="dash-status">{{status}}</span></td>
            <td></td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<h6>You Have not created any stories</h6>
{{/if}}